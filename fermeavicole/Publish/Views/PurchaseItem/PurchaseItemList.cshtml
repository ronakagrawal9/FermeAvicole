@model IEnumerable<PurchaseItemVM>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section metatitle
{
    <title> Purchase Item List</title>
}
<section class="content-header">
    <h1>
        Purchase Item List
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home </a></li>
        <li class="active">Purchase Item List</li>
    </ol>
</section>
<!-- Main content -->

<section class="content">


    <p>
        @Html.ActionLink("Add New", "Create")
    </p>
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Item_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Price)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Item_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item_Image)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Item_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item_Price)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Item_Description)
                </td>
                <td>
                    <img src="@item.Image_Path" height="100px" width="100px" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PurchaseItem_Id }) |

                    @Html.ActionLink("Delete", "Delete", new { id = item.PurchaseItem_Id })
                </td>
            </tr>
        }

    </table>

</section>

<!-- /.content -->
