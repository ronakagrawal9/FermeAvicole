@model PurchaseCategoryVM


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section metatitle
{
    <title> Create Purchase Category  </title>
}

<!-- Main content -->



<!-- /.content -->
<div class="content-wrapper">

    <section class="content">
        <!-- Defualt box -->
        <div class="box">
            <div class="box-header with-border">

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>

                <div class="box-body">
                    <section class="content-header">
                        <h1>
                            Create Purchase Category
                        </h1>
                        <ol class="breadcrumb">
                            <li><a href="#"><i class="fa fa-dashboard"></i> Home </a></li>
                            <li class="active">Create Purchase Category</li>
                        </ol>
                    </section>
                    <section class="content">
                        @using (Html.BeginForm())
                        {


                            <div class="form-horizontal">


                                <div class="form-group">
                                    @Html.LabelFor(model => model.Category_Name, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.Category_Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Category_Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-3 col-md-4">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-3 col-md-4">
                                        @Html.ActionLink("Back to List", "PurchaseCategoryList")
                                    </div>
                                </div>
                            </div>
                        }

                        <div>

                        </div>

                    </section>
                </div>
                <!-- /box body -->


            </div>
        </div>
    </section>
</div>

