@model IEnumerable<ItemVM>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section metatitle
{
    <title> Item List</title>
}

<!-- Main content -->


<!-- /.content -->
<div class="content-wrapper">

    <section class="content">
        <!-- Defualt box -->
        <div class="box">
            <div class="box-header with-border">

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>

                <div class="box-body">
                    
                </div>
                <!-- /box body -->
                <section class="content-header">
                    <h1>
                        Item List
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-dashboard"></i> Home </a></li>
                        <li class="active">Item List</li>
                    </ol>
                </section>
                <section class="content">


                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                    <table class="table">
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Item_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Category_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Item_Price)
                            </th>


                            <th>
                                @Html.DisplayNameFor(model => model.Item_Image)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Item_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Item_Price)
                                </td>


                                <td>
                                    <img src="@item.Image_Path" height="100px" width="100px" />
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Item_Id }) |

                                    @Html.ActionLink("Delete", "Delete", new { id = item.Item_Id })
                                </td>
                            </tr>
                        }

                    </table>

                </section>

            </div>
        </div>
    </section>
</div>
