@model LoginVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    TempData.Keep("returnUrl");
}

<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
                @*<div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>*@
            </div>
            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>


                <form id="loginform" class="form-horizontal" role="form" action="/home/login/" method="post">
                   

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(m => m.Email_Id, new { @class = "form-control", @placeholder = "Enter Email Id", @type = "text" })
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control", @placeholder = "Enter User Password" })
                    </div>
                    @if (ViewBag.Error == true)
                    {
                        <div class="alert alert-danger" role="alert">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }




                    @*<div class="input-group">
                            <div class="checkbox">
                                <label>
                                    <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                </label>
                            </div>
                        </div>*@

                    <div style="margin-top:10px" class="form-group">
                        <!-- Button -->
                        <div class="col-sm-12 controls">

                            <input type="submit" value="Login" class="btn btn-success" />

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                Don't have an account!
                                <a href="@Url.Action("Register","Home")">
                                    Sign Up Here
                                </a>
                            </div>
                            <div style="padding-top:5px; font-size:85%">
                                Have you forget your Password?
                                <a href="@Url.Action("ForgetPassword","Home")">
                                    Forget Password
                                </a>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

</div>
