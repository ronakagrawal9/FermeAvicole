

@model OrderVM

@{
    ViewBag.Title = "ViewOrder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section metatitle
{
    <title>ViewOrder</title>
}


<div class="content-wrapper">

    <section class="content">
        <!-- Defualt box -->
        <div class="box">
            <div class="box-header with-border">

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>

                <div class="box-body">
                    <div id="page-wrapper">
                        <div cl}
                             ass="container-fluid">
                            <!-- Page Heading -->
                            <div class="row">
                                <div class="col-lg-12">

                                    <ol class="breadcrumb">
                                        <li class="active">
                                            <i class="fa fa-dashboard"></i> Order Details
                                        </li>
                                    </ol>

                                    <h2>Order Items</h2>
                                    <table class="table">
                                        <tr>


                                            <th>
                                                Order_Id
                                            </th>

                                            <th>
                                                Item_Name
                                            </th>

                                            <th>
                                                Quantity
                                            </th>

                                            <th>
                                                Amount
                                            </th>
                                            <th>
                                                Total
                                            </th>

                                        </tr>


                                        @foreach (var item in Model.OrderItems)
                                        {
                                            <tr>


                                                <td>
                                                    @Html.DisplayFor(model => item.Order_Id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.Item_Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.Quantity)

                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.Amount)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(model => item.Total)
                                                </td>
                                            </tr>
                                        }

                                    </table>

                                    <br />
                                    <br />
                                    <h2>Payment Details</h2>

                                    <table class="table">
                                        <tr>


                                            <th>
                                                Transaction Id
                                            </th>

                                            <th>
                                                Transaction Date
                                            </th>

                                            <th>
                                                Order Number
                                            </th>

                                            <th>
                                                Customer Name
                                            </th>
                                            <th>
                                                Amount
                                            </th>
                                            <th>
                                                Payment Mode
                                            </th>

                                        </tr>



                                        <tr>

                                            <td>
                                                @Model.PaymentTransaction.PaymentTransaction_Id
                                            </td>
                                            <td>
                                                @Model.PaymentTransaction.Date
                                            </td>
                                            <td>
                                                @Model.PaymentTransaction.Order_Id

                                            </td>
                                            <td>
                                                @Model.PaymentTransaction.User_Id
                                            </td>

                                            <td>
                                                @Model.PaymentTransaction.Amount
                                            </td>
                                            <td>
                                                @Model.PaymentTransaction.Payment_Mode
                                            </td>
                                          
                                        </tr>


                                    </table>
                                </div>

                            </div>

                        </div>
                        <!-- /.container-fluid -->
                    </div>
                </div>
                <!-- /box body -->


            </div>
        </div>
    </section>
</div>


