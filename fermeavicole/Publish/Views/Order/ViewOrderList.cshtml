

@model IEnumerable<FermeAvicole.ViewModel.OrderVM>

@{
    ViewBag.Title = "ViewOrderList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section metatitle
{
    <title>ViewOrderList</title>
}



<div class="content-wrapper">

    <section class="content">
        <!-- Defualt box -->
        <div class="box">
            <div class="box-header with-border">

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>

                <div class="box-body">
                    <div id="page-wrapper">
                        <div cl}
                             ass="container-fluid">
                            <!-- Page Heading -->
                            <div class="row">
                                <div class="col-lg-12">

                                    <ol class="breadcrumb">
                                        <li class="active">
                                            <i class="fa fa-dashboard"></i> Order List
                                        </li>
                                    </ol>
                                    <table class="table">
                                        <tr>

                                            <th>
                                                @Html.DisplayNameFor(model => model.Order_Id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Customer_Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Date)

                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Total_Amount)
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(model => model.Order_Status)
                                            </th>
                                            <th>
                                                View Order
                                            </th>
                                        </tr>


                                        @foreach (var item in Model)
                                        {
                                            <tr>

                                                <td>
                                                    @Html.DisplayFor(model => item.Order_Id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.Customer_Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.Date)

                                                </td>
                                                <td>

                                                    @Html.DisplayFor(model => item.Total_Amount)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(model => item.Order_Status)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("View Order", "ViewOrder", new { id = item.Order_Id })
                                                </td>
                                            </tr>
                                        }

                                    </table>
                                </div>

                            </div>

                        </div>
                        <!-- /.container-fluid -->
                    </div>
                </div>
                <!-- /box body -->


            </div>
        </div>
    </section>
</div>

