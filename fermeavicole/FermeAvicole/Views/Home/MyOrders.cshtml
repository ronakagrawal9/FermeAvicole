@model IEnumerable<FermeAvicole.ViewModel.OrderVM>

@{
    Layout = "~/Views/Shared/_AfterLoginLayout.cshtml";
}

@section metatitle
{
    <title>My Orders</title>
}

<br /><br />
<section class="page-title" style="background-image:url(/images/background/8.jpg);">
    <div class="auto-container">
        <div class="inner-box">
            <h1>My Orders</h1>
            <ul class="bread-crumb">
                <li><a href="@Url.Action("Index","Home")">Home</a></li>
                <li>My Orders</li>
            </ul>
        </div>
    </div>
</section>

<section class="farmer-section">
    <div class="auto-container">

        <div class="row clearfix">


            <section class="content">
                <!-- Defualt box -->
                <div class="box">
                    <div class="box-header with-border">

                        <div class="box-body">
                            <div id="page-wrapper">
                                <div cl}
                                     ass="container-fluid">
                                    <!-- Page Heading -->
                                    <div class="row">
                                        <div class="col-lg-12">

                         
                                            <table class="table">
                                                <tr>

                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Order_Id)
                                                    </th>

                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Date)

                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Total_Amount)
                                                    </th>

                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Order_Status)
                                                    </th>
                                                    <th>
                                                        View Order
                                                    </th>
                                                </tr>


                                                @foreach (var item in Model)
                                                {
                                                    <tr>

                                                        <td>
                                                            @Html.DisplayFor(model => item.Order_Id)
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(model => item.Date)

                                                        </td>
                                                        <td>

                                                            @Html.DisplayFor(model => item.Total_Amount)
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(model => item.Order_Status)
                                                        </td>
                                                        <td>
                                                            @Html.ActionLink("View Order", "ViewOrder", new { id = item.Order_Id })
                                                        </td>
                                                    </tr>
                                                }

                                            </table>
                                        </div>

                                    </div>

                                </div>
                                <!-- /.container-fluid -->
                            </div>
                        </div>
                        <!-- /box body -->


                    </div>
                </div>
            </section>
        </div>

    </div>
</section>