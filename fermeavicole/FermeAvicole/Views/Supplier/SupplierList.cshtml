@model IEnumerable<FermeAvicole.ViewModel.SupplierVM>

@{
    ViewBag.Title = "SupplierList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section metatitle
{
    <title>Supplier List</title>
}





<div class="content-wrapper">

    <section class="content">
        <!-- Defualt box -->
        <div class="box">
            <div class="box-header with-border">
               
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>

                <div class="box-body">
                    <div id="page-wrapper">
                        <div class="container-fluid">
                            <!-- Page Heading -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <h1 class="page-header">
                                        Supplier List
                                    </h1>
                                    <ol class="breadcrumb">
                                        <li class="active">
                                            <i class="fa fa-dashboard"></i> Supplier List
                                        </li>
                                    </ol>

                                    <p>
                                        @Html.ActionLink("Create New", "Create")
                                    </p>
                                    <table class="table">
                                        <tr>

                                            <th>
                                                @Html.DisplayNameFor(model => model.Supplier_Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Address)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Pincode)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Contact_Number)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Email_Id)
                                            </th>
                                            <th></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Supplier_Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Address)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Pincode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Contact_Number)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Email_Id)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.Supplier_Id }) |

                                                    @Html.ActionLink("Delete", "Delete", new { id = item.Supplier_Id })
                                                </td>
                                            </tr>
                                        }

                                    </table>


                                </div>

                            </div>

                        </div>
                        <!-- /.container-fluid -->
                    </div>
                </div>
                <!-- /box body -->
               

            </div>
        </div>
    </section>
</div>
