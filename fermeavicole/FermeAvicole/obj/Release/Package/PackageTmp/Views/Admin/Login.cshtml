@model LoginVM

@{
    
    Layout = null;
}
<link href="~/AdminLTE/css/bootstrap.css" rel="stylesheet" />
<br /><br /><br /><br />
    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Admin Login</div>
                   
                </div>
                <div style="padding-top:30px" class="panel-body">
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>


                    <form id="loginform" class="form-horizontal" role="form" action="/admin/login/" method="post">
                      

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.TextBoxFor(m => m.Email_Id, new { @class = "form-control", @placeholder = "Enter Email Id", @type = "text" })
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control", @placeholder = "Enter User Password" })
                        </div>
                        @if (ViewBag.Error == true)
                        {
                            <div class="alert alert-danger" role="alert">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            </div>
                        }



                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->
                            <div class="col-sm-12 controls">
                            
                                <input type="submit" value="Login" class="btn btn-success" />

                            </div>
                        </div>

                  
                    </form>

                </div>
            </div>
        </div>

    </div>
